  <div class="idd">
      <p style="opacity: 0.4;"><strike><%= link_to idd.integration_id, idd_path(idd) %></strike></p>
  </div>
  <div class="trash">
    <%= link_to "Delete IDD", project_idd_path(@project, idd), method: :delete, data: { confirm: "Are you sure?"} %>
  </div>
  <% else %>
      <div class="complete">
        <%= link_to "Mark Out of Scope", complete_project_idd_path(@project, idd.id), method: :patch %>

        <p><%= link_to idd.integration_id, idd_path(idd) %></p>
    </div>
    <div class="trash">
      <%= link_to "Delete IDD", project_idd_path(@project, idd), method: :delete, data: { confirm: "Are you sure?"} %>
    </div>
  <% end %>
</div>
